        ['March', 100],
        ['April', 100],
        ['May', 100],
        ['June', 100],
        ['July', 100],
        ['August', 100],
        ['September', 100],
        ['October', 100],
        ['November', 100],
        ['December', 100]
      ]);

      var options = {
        title: 'Spending each month',
        legend: {position: 'none'},
      };

      var chart = new google.visualization.Histogram(document.getElementById('chart_div'));
      chart.draw(data, options);
    }
